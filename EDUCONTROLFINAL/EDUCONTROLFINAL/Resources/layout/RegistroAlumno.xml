<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
        android:text="Registro"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView1"
        android:textStyle="normal|bold" />
    <TextView
        android:text="Por Favor Ingrese Sus Datos"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_marginVertical="15dp"
        android:textSize="20dp"
        android:textStyle="bold" />
      <TextView
        android:text="Nombres"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtNombreEstudiante" />

     <TextView
        android:text="Apellidos"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView34" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtApellidoEstudiante" />

     <TextView
        android:text="NÂ° Carnet"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView35" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtCarnetEstudiante" />

     <TextView
        android:text="Email"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView30" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtEmailEstudiante" />

	<TextView
        android:text="Carrera"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView30" />


	<Spinner
		android:textAlignment="center"
		android:layout_marginHorizontal="10dp"
		android:layout_width="match_parent"
		android:layout_marginTop="10dp"
		android:layout_height="45dp"
		android:id="@+id/spinListCarrera" />

    <Button
        android:text="Guardar"
        android:textStyle="normal|bold"
        android:background="@drawable/stylebtndegr" 
        android:textColor="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnGuardarEstudiante" />
</LinearLayout>
