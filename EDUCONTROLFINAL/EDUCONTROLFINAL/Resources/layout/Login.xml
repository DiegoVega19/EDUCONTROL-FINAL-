<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Inicio De Sesion"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textAlignment="center"
        android:textSize="30dp"
         android:layout_marginTop="15dp"
        android:id="@+id/textView1"
        android:textStyle="normal|bold" />
    <TextView
        android:text="Bienvenidos Ingrese Sus Datos"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_marginVertical="15dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:text="usuario"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtUsuarioLogin" />
    <TextView
        android:text="Contraseña"
        android:textStyle="normal|bold"
         android:layout_marginHorizontal="40dp"
        android:layout_marginTop="45dp"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/textView4" />
    <EditText
        android:inputType="textPassword"
         android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtContraseñaLogin" />
    <Button
        android:text="Entrar"
        android:textStyle="normal|bold"
        android:background="@drawable/stylebtndegr" 
        android:textColor="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/btnEntarLogin" />

	<Button
        android:text="¿no tiene una cuenta?   resgistrarse"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"		
		style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/btnRegistrar" />
</LinearLayout>
