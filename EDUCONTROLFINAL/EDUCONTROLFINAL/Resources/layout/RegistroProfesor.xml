<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1" >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1" >
                 <TextView
                android:text="Registro"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_marginTop="15dp"
                android:id="@+id/textView1"
                android:textStyle="normal|bold" />
            <TextView
                android:text="Por Favor Ingrese Sus Datos"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/textView2"
                android:layout_marginVertical="15dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:text="Nombres"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtNombreDocente" />

             <TextView
                android:text="Apellidos"
       
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView35" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtApellidoDocente" />
            <TextView
                android:text="INSS"
       
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtInssDocente" />
            <TextView
                android:text="Cargo"
       
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtCargoDocente" />

			<TextView
                android:text="TelÃ©fono"
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView45" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtTelefonoDocente" />

            <TextView
                android:text="Email"
                android:layout_marginHorizontal="40dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView45" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/txtEmailDocente" />
            
              <Button
                android:text="Guardar"
                android:layout_marginTop="10dp"
                android:textStyle="normal|bold"
                android:background="@drawable/stylebtndegr" 
                android:textColor="@android:color/white"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnGuartdarDocente" />
		</LinearLayout>

    </ScrollView>
        
    

</LinearLayout>
